<div id="survey">
<%=@survey.title%>
<form action="/survey/<%=@survey.id%>" method="post">
  <ul>
    <%@survey.questions.each do |question|%>
      <li>
        <%=question.question_text%>
        <ul>
          <%question.choices.each do |choice| %>
            <li>
              <input type="radio" value="<%=choice.id%>" name="responses[<%=question.id%>]" required> <%=choice.choice_text%>
            </li>
          <% end %>
        </ul>
      </li>
    <%end%>
  </ul>
  <input type="submit" value="submit">
</form>

<br>
<% if @error %>
  <div class="error">
    <%= @error %>
  </div>
<% end %>

</div>
